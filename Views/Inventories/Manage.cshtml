@model Inventoria.Models.Inventory
@using Inventoria.Models
@{
    ViewData["Title"] = "Inventory";
    var tab = (string)ViewBag.Tab ?? "items";
}
<div class="d-flex align-items-center justify-content-between">
    <h3>@Model.Title</h3>
    <div>
        <a class="btn btn-outline-secondary" href="/Items/Create?inventoryId=@Model.Id">Add item</a>
    </div>
</div>
<ul class="nav nav-tabs my-3">
  <li class="nav-item"><a class="nav-link @(tab=="items"?"active":"")" href="?id=@Model.Id&tab=items">Items</a></li>
  <li class="nav-item"><a class="nav-link @(tab=="discussion"?"active":"")" href="?id=@Model.Id&tab=discussion">Discussion</a></li>
  <li class="nav-item"><a class="nav-link @(tab=="general"?"active":"")" href="?id=@Model.Id&tab=general">General</a></li>
  <li class="nav-item"><a class="nav-link @(tab=="customid"?"active":"")" href="?id=@Model.Id&tab=customid">Custom ID</a></li>
  <li class="nav-item"><a class="nav-link @(tab=="fields"?"active":"")" href="?id=@Model.Id&tab=fields">Fields</a></li>
</ul>

@if (tab=="items")
{
    <partial name="_ItemsTab" model="Model" />
}
else if (tab=="discussion")
{
    <partial name="_DiscussionTab" model="Model" />
}
else if (tab=="general")
{
    <partial name="_GeneralTab" model="Model" />
}
else if (tab=="customid")
{
    <partial name="_CustomIdTab" model="Model" />
}
else if (tab=="fields")
{
    <partial name="_FieldsTab" model="Model" />
}

@section Scripts{
    <script src="~/js/autosave.js"></script>
    <script src="~/js/customid.js"></script>
    <script src="~/js/discussion.js"></script>
}
